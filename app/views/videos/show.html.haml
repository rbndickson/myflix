%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        = image_tag @video.large_cover_url
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %h4=link_to @video.category.name, category_path(@video.category)
          %span Rating: 4.5/5.0
        %p= @video.description
        .actions

%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  %ul.col-md-3.clearfix
    %li= link_to "Videos"
    %li= link_to "My Queue"
    %li= link_to "People"
  = form_tag(search_videos_path, class:"col-md-5 form-inline", method: "get") do
    = text_field_tag "query", nil, class: "form-control", placeholder: "Search for videos here"
    = submit_tag "Search", class: "btn btn-default"
  #user_links.col-md-2.pull-right
    %ul
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Welcome, Philip J. Fry
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          %li
            %a(href="#") Account
            %a(href="#") Plan and Billing
            %a(href="#") Sign Out

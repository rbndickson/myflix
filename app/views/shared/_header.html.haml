%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", videos_path
  - if signed_in?
    %ul.col-md-3.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    = form_tag(search_videos_path, class:"col-md-5 form-inline", method: "get") do
      = search_field_tag "query", nil, class: "form-control pull-left", placeholder: "Enter title here"
      = submit_tag "Search", class: "btn btn-default"
    #user_links.col-md-2.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a= link_to "Invite a Friend", new_invitation_path
              %a= link_to "Sign Out", sign_out_path
